<% provide(:title, t(:txt_signuptit)) %>
<div class="row signup">
    <div class="col-md-6 col-md-offset-3 form-group">
        <%= form_for @user do |f| %>
            <%= render 'shared/error_messages' %>
            <%= f.label t("signup.form.name") %>
            <%= f.text_field :name, class: "form-control" %>
            <%= f.label t("signup.form.email") %>
            <%= f.email_field :email, class: "form-control" %>
            <%= f.label t("signup.form.password") %>
            <%= f.password_field :password, class: "form-control" %>
            <%= f.label t("signup.form.password_confirm") %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
            <%= f.submit t("signup.form.submit"), class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
